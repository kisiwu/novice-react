{
  "name": "@novice1-react/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "@novice1 React packages",
  "scripts": {
    "build": "pnpm -r build",
    "dev:react-router-paneling-framework": "pnpm --filter react-router-paneling-framework dev",
    "dev:react-router-paneling-vite-js": "pnpm --filter react-router-paneling-vite-js dev",
    "dev:react-router-paneling-vite-ts": "pnpm --filter react-router-paneling-vite-ts dev",
    "dev:react-router-paneling-zustand": "pnpm --filter react-router-paneling-zustand dev",
    "lint": "pnpm -r lint",
    "release:build": "pnpm --filter \"./packages/*\" -r build",
    "release:test": "pnpm --filter \"./packages/*\" -r test",
    "release:publish": "pnpm --filter \"./packages/*\" -r publish --access public",
    "release:version": "pnpm --filter \"./packages/*\" -r exec npm version",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r typecheck",
    "version:patch": "pnpm --filter \"./packages/*\" -r exec npm version patch",
    "version:minor": "pnpm --filter \"./packages/*\" -r exec npm version minor",
    "version:major": "pnpm --filter \"./packages/*\" -r exec npm version major"
  },
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "keywords": [],
  "author": "demingongo",
  "license": "MIT",
  "packageManager": "pnpm@10.30.0",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.4",
    "@eslint/js": "^9.39.2",
    "@stylistic/eslint-plugin": "^5.9.0",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "@vitejs/plugin-react-swc": "^4.2.3",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.2",
    "globals": "^17.3.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1",
    "vite": "^6.4.1",
    "vite-plugin-dts": "^4.5.3"
  }
}
